##  PATH
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/texlive/2016/bin/x86_64-darwin:/usr/texbin:$HOME/sh:$PATH"
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
export EDITOR=vim
export VISUAL=vim
export HOMEBREW_BREWFILE=$HOME/dotfiles/Brewfile

## Go 環境設定
if [ -x "`which go`" ]; then
  export GOPATH=$HOME/.go
  export PATH=$PATH:$GOPATH/bin
fi

## pyenv
if [ -d $HOME/.pyenv/ ]; then
  export PYENV_ROOT="$HOME/.pyenv"
  export PATH=$PATH:$PYENV_ROOT/bin
  export PATH="$PATH:$PYENV_ROOT/versions/anaconda3-2.5.0/bin"
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
  eval "$(direnv hook zsh)"
fi

## rbenv
if [ -d ${HOME}/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi

## nodebrew
if [ -d ${HOME}/.nodebrew ]; then
  export PATH="$HOME/.nodebrew/current/bin:$PATH"
  export PATH=$PATH:$HOME/node_modules/.bin
fi

# direnv
eval "$(direnv hook zsh)"

## Alias
# update
alias update='brew update && brew upgrade'
# rmtrash
alias rm='rmtrash'
# seal vi
alias vi='vim'
# pwd copy
alias pwdc='pwd | pbcopy'
# yomiage
alias yomiage="pbpaste | say"
# tree with color and not encode misconversion
alias tree='tree -NC'
# vim typo
alias im='vim'
alias bim='vim'
# ウィンドウ情報を回復してvimを開始
alias vis="vim -S $HOME/.session.vim"
alias ls="ls -FG"
